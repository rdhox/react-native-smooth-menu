{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build/",
    "jsx": "react-native",
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__"
  ]
}
